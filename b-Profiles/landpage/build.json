{
  "name": "Landpage",
  "framework": "vanilla",
  "port": 8000,
  "src": "src",
  "dist": "dist",

  "build": [
    { "mod": "sass", "input": "src/scss/style.scss", "output": "style.css" },
    { "mod": "tsc", "dir": "src/typescript", "output": "script.js" },
    { "mod": "copy", "files": "index.html", "from": "src" },
    { "mod": "symlink", "files": "public" }
  ],

  "serve": {
    "mode": "auto",
    "dir": "src",
    "watch": [
      { "mod": "sass", "input": "scss/style.scss", "output": "style.css" },
      { "mod": "tsc", "input": "typescript" }
    ]
  },

  "deploy": {}
}
