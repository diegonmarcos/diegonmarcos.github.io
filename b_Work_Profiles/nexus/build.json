{
  "name": "Nexus",
  "framework": "vanilla",
  "port": 8005,
  "src": "src_static",
  "dist": "dist",

  "build": [
    { "mod": "sass", "input": "src_static/scss/main.scss", "output": "style.css" },
    { "mod": "esbuild", "input": "src_static/typescript/main.ts", "output": "script.js", "format": "iife", "target": "es2020" },
    { "mod": "copy", "files": "index.html", "from": "src_static" },
    { "mod": "inline", "html": "index.html", "css": "style.css", "js": "script.js" },
    { "mod": "symlink", "files": "public" }
  ],

  "serve": {
    "mode": "auto",
    "dir": "src_static",
    "watch": [
      { "mod": "sass", "input": "scss/main.scss", "output": "style.css" },
      { "mod": "esbuild", "input": "typescript/main.ts", "output": "script.js", "format": "iife", "target": "es2020" }
    ]
  },

  "deploy": {}
}
