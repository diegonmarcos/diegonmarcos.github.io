{
  "name": "cv_web",
  "version": "1.0.0",
  "description": "CV website",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "build:css": "sass src/scss/main.scss style.css --style compressed",
    "build:ts": "tsc",
    "build:bundle": "esbuild src/main.ts --bundle --outfile=script.js --format=iife --target=es2020 --minify",
    "build": "npm run build:ts && npm run build:bundle && npm run build:css",
    "dev:css": "sass src/scss/main.scss style.css",
    "dev:ts": "tsc --watch",
    "dev:bundle": "esbuild src/main.ts --bundle --outfile=src/script.js --format=iife --target=es2020 --sourcemap --watch",
    "dev": "npm run build:bundle",
    "watch:css": "sass --watch src/scss/main.scss:src/style.css",
    "watch:ts": "npm run dev:bundle",
    "typecheck": "tsc --noEmit"
  },
  "author": "Diego Nepomuceno Marcos",
  "license": "ISC",
  "dependencies": {
    "sass": "^1.77.4"
  },
  "devDependencies": {
    "esbuild": "^0.20.2",
    "typescript": "^5.9.3"
  }
}
