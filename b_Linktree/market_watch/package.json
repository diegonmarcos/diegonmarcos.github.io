{
  "name": "market-watch-terminal",
  "version": "1.0.0",
  "description": "Bloomberg-style Market Watch Terminal with TypeScript and Sass",
  "main": "dist/index.html",
  "scripts": {
    "build": "npm run build:css && npm run build:js",
    "build:css": "sass src_static/scss/main.scss dist/styles.css --style=compressed --no-source-map",
    "build:js": "tsc && esbuild src_static/typescript/main.ts --bundle --outfile=dist/script.js --minify --target=es2015",
    "dev": "npm run dev:css & npm run dev:js",
    "dev:css": "sass src_static/scss/main.scss dist/styles.css --watch --style=expanded --source-map",
    "dev:js": "tsc --watch & esbuild src_static/typescript/main.ts --bundle --outfile=dist/script.js --watch --sourcemap",
    "clean": "rm -rf dist/*.css dist/*.js dist/*.map",
    "lint": "eslint src_static/typescript/**/*.ts",
    "format": "prettier --write \"src_static/**/*.{ts,scss}\""
  },
  "keywords": [
    "bloomberg",
    "terminal",
    "market-watch",
    "typescript",
    "sass"
  ],
  "author": "Diego Nepomuceno Marcos",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "esbuild": "^0.19.8",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "sass": "^1.69.5",
    "typescript": "^5.3.2"
  }
}
