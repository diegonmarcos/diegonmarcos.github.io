# Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git - it's in .gitignore

# =====================================
# SPOTIFY API CREDENTIALS
# =====================================
# Get these from: https://developer.spotify.com/dashboard/applications
VITE_SPOTIFY_CLIENT_ID=your_spotify_client_id_here
VITE_SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
VITE_SPOTIFY_REDIRECT_URI=http://localhost:5173/auth/spotify/callback

# Spotify API Scopes (comma-separated)
# user-top-read: Access top artists and tracks
# user-read-recently-played: Access recently played tracks
# playlist-read-private: Access user's private playlists
VITE_SPOTIFY_SCOPES=user-top-read,user-read-recently-played,playlist-read-private

# =====================================
# STRAVA API CREDENTIALS
# =====================================
# Get these from: https://www.strava.com/settings/api
VITE_STRAVA_CLIENT_ID=your_strava_client_id_here
VITE_STRAVA_CLIENT_SECRET=your_strava_client_secret_here
VITE_STRAVA_REDIRECT_URI=http://localhost:5173/auth/strava/callback

# Strava API Scopes (comma-separated)
# activity:read_all: Read all activity data
# profile:read_all: Read all profile data
VITE_STRAVA_SCOPES=activity:read_all,profile:read_all

# =====================================
# MATOMO ANALYTICS (Optional)
# =====================================
# Get these from your Matomo installation
VITE_MATOMO_URL=https://your-matomo-instance.com
VITE_MATOMO_SITE_ID=1

# Enable/disable tracking
VITE_MATOMO_ENABLED=false

# =====================================
# APPLICATION SETTINGS
# =====================================
# Base path for GitHub Pages deployment
# Leave empty for local development
VITE_BASE_PATH=

# Environment mode
NODE_ENV=development

# =====================================
# FEATURE FLAGS
# =====================================
# Enable/disable features during development
VITE_ENABLE_SPOTIFY=false
VITE_ENABLE_STRAVA=false
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_PHOTOS_UPLOAD=false

# =====================================
# NOTES
# =====================================
# - All VITE_ prefixed variables are exposed to the client
# - Non-VITE_ variables are server-side only
# - Never commit sensitive credentials to version control
# - Use different values for development and production
