{
  "name": "nexus",
  "version": "2.0.0",
  "description": "Nexus Holdings - Capital & Corporate Services (Vanilla)",
  "scripts": {
    "build:css": "sass src_static/scss/main.scss dist/styles.css --style=compressed --no-source-map",
    "build:ts": "tsc src_static/typescript/main.ts --outFile dist/script.js --target ES2020 --module none --strict",
    "dev:css": "sass src_static/scss/main.scss dist/styles.css --style=expanded --source-map --watch",
    "dev:ts": "tsc src_static/typescript/main.ts --outFile dist/script.js --target ES2020 --module none --watch"
  },
  "devDependencies": {
    "sass": "^1.77.0",
    "typescript": "^5.9.3"
  }
}
