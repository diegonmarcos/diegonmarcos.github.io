{
  "name": "Leafy",
  "framework": "vanilla",
  "port": 8021,
  "src": "src",
  "dist": "dist",

  "build": [
    { "mod": "sass", "input": "src/scss/main.scss", "output": "styles/main.css" },
    { "mod": "tsc", "dir": "src/typescript", "output": "script.js" },
    { "mod": "copy", "files": "*.html", "from": "src" }
  ],

  "serve": {
    "mode": "auto",
    "dir": "src",
    "watch": [
      { "mod": "sass", "input": "scss/main.scss", "output": "styles/main.css" },
      { "mod": "tsc", "input": "typescript" }
    ]
  },

  "deploy": {}
}
